                            var id = $"{dataAtual.Day}_{dataAtual.Month}";
                            var possuiLog = logsPorDia.ContainsKey(dataAtual);
                            var logsDoDia = possuiLog ? logsPorDia[dataAtual] : null;

                            <div id="@id" onclick="AbreDia('@id')" class="diaMes @(possuiLog ? "temLog" : "")">
