<div class="dashboard coluna"
     style="--gap: 10px; height: 100%; flex-direction: column-reverse; z-index:1">
    
    @if (Model.Resposta != null)
    {
        <div class="resposta">
            <h3>Resposta da IA:</h3>
            <pre>@Model.Resposta</pre>
        </div>
    }

    <form method="post">

        <div class="ImputIA linha" onclick="document.getElementById('IaPergunta').focus()">
            <img src="~/css/icons/estrelaIA.svg"
                 alt="ÍconeHome"
                 width="18"
                 height="18" />
            <input asp-for="Prompt"
                   type="text"
                   id="IaPergunta"
                   placeholder="Pergunte à Inteligência Artificial!" />
            <button type="submit">Gerar</button>
        </div>

    </form>
</div>
